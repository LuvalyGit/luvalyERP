    private void btIngresarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btIngresarActionPerformed
        
        ExeSql Sql = new ExeSql(); 
        ExeSql Sql2 = new ExeSql();
        ResultSet Rs;
       
            
        if (txEfectivo.getText().equals("")){
                
            txEfectivo.setText("0");
                
        }
            
        if (txEfectivo.getText().equals("0")){
                
            fmMain.Mensaje("Debe Ingresar una Cantidad");
            return;
                
        }
            
            
        double Efectivo = Double.parseDouble(txEfectivo.getText());
            
            
        try {
            
            
            Rs = Sql.Select("SELECT * FROM caja_ventas \n"+
                            "WHERE tipdocto IN('FFJ') and femision =  '"+getFecha()+"'");
            
            
            if (Sql.GetRowCount() == 0){
            
            
                Sql2.ExeSql("INSERT INTO caja_ventas\n" +
                           "(rut,tipdocto,nrodocto,monto,tipopago, femision) VALUES\n" +
                           "(00000000,'FFJ',0,"+ Efectivo +
                           ",100, '" +getFecha()+ "')");
            
                Sql2.Commit();
                
                fmMain.fondofijo = Efectivo;
                
                fmMain.Mensaje("Ingresado");
                
                dispose();
            
            }else if (Sql.GetRowCount() > 0) {
                    
             
                Sql2.ExeSql("UPDATE caja_ventas cv SET \n" +               
                            "monto = "+Efectivo+ "\n"+
                            "WHERE tipdocto IN('FFJ') AND date(cv.femision) = '"+getFecha()+"'");
                
                Sql2.Commit();
                
                fmMain.fondofijo = Efectivo;
                fmMain.Mensaje("Ingresado");
                
                dispose();
            
            }
        
        } catch (SQLException ex) {
        
          Sql2.Rollback();
          Logger.getLogger(jdVariables.class.getName()).log(Level.SEVERE, null, ex);
        
        } finally{
        
            Sql2.Close();
        
        }
                    
        
        
        
        
        
      
        
    }//GEN-LAST:event_btIngresarActionPerformed

    public String getFecha() {
        SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd");
        return( sdf.format( (dtFecha.getDate()).getTime() ) );
    }



