    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        ExeSql sql = new ExeSql();    
        String nombre = descripcion.getText().trim();
        String tipo = cbTipo.getSelectedItem().toString().trim();
        if(!nombre.equals("") && !tipo.equals("")){
            c.setTime(dt); 
            dt = dateInicio.getDate();
            System.out.println(sdf.format(dt));
            try {
                int resultdo = sql.ExeSqlInt("insert into feriados (fecha_feriado,descripcion,tipo) values "
                        + "('"+sdf.format(dt)+"','"+nombre+"','"+tipo+"')");
                sql.Commit();
                if(resultdo>0){
                    JOptionPane.showMessageDialog(rootPane, "Se registró feriado");
                    descripcion.setText("");
                    cbTipo.setSelectedIndex(0);
                } else {
                    sql.Rollback();
                    JOptionPane.showMessageDialog(rootPane, "Error al registrar");
                    descripcion.setText("");
                    cbTipo.setSelectedIndex(0);
                }
                
            } catch (SQLException ex) {
                sql.Rollback();
                Logger.getLogger(jdFeriado.class.getName()).log(Level.SEVERE, null, ex);
            } finally {
                sql.Close();
            }
        }
        
