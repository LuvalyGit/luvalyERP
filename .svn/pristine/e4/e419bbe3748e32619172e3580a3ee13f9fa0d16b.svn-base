    public void CargaCantidad() {
        ExeSql sql = new ExeSql();
        ResultSet rs = null;
        String Query =  "select pc.tipo, pc.numero, pc.desde, pc.hasta, pc.hasta_real \n" +
                        "from par_correlativo pc\n" +
                        "where pc.tipo = 'NCC'";
        try {
            rs = sql.Select(Query);
            for(int i = 0; rs.next(); i++){
                diferencia_folios.setText(String.valueOf(rs.getInt("hasta") - rs.getInt("numero")));
                folios_actuales.setText(rs.getString("numero"));
                folios_tope.setText(rs.getString("hasta_real"));
                folio_hasta.setText(rs.getString("hasta"));
                txPrevia.setText(rs.getString("hasta"));
            }
            
        } catch (SQLException ex) {
            Logger.getLogger(pfControlNCC.class.getName()).log(Level.SEVERE, null, ex);
        }
        
    }

