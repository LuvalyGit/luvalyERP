    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        
        int base = Integer.valueOf(folios_actuales.getText().trim());
        int tope = Integer.valueOf(folios_tope.getText().trim());
        int actual = Integer.valueOf(folio_hasta.getText().trim());
        int previa = Integer.valueOf(txPrevia.getText());
        int cantidad = Integer.valueOf(txCantidad.getText());
        if((previa + 1) <= tope){
            txPrevia.setText(String.valueOf(previa + 1));
            txCantidad.setText(String.valueOf(cantidad + 1));
        }
        else {
            JOptionPane.showMessageDialog(null, "Cantidad supera el tope.");
        }
        
    }//GEN-LAST:event_jButton1ActionPerformed

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed

        int base = Integer.valueOf(folios_actuales.getText().trim());
        int tope = Integer.valueOf(folios_tope.getText().trim());
        int actual = Integer.valueOf(folio_hasta.getText().trim());
        int previa = Integer.valueOf(txPrevia.getText());
        int cantidad = Integer.valueOf(txCantidad.getText());
        if((previa - 1) >= base){
            txPrevia.setText(String.valueOf(previa - 1));
            txCantidad.setText(String.valueOf(cantidad - 1));
        }
        else {
            JOptionPane.showMessageDialog(null, "Cantidad inferior a la base.");
        }
        
    }//GEN-LAST:event_jButton2ActionPerformed

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton3ActionPerformed
        ExeSql sql = new ExeSql();
        int hasta = Integer.valueOf(folios_actuales.getText());
        int cantidad = Integer.valueOf(txCantidad.getText());
        System.out.println(hasta + cantidad);
        String Query = "update par_correlativo set hasta = hasta+"+(cantidad)+" where tipo = 'NCC'";
        try {
            if(JOptionPane.showConfirmDialog(null, "¿Desea cambiar el valor máximo de folios NCC?")==0){
                int i = sql.ExeSqlInt(Query);
                System.out.println(i);
                if(i>0){
                    JOptionPane.showMessageDialog(null, "Se modificó la cantidad de: '"+cantidad+"' folios.");
                    sql.ExeSql("update par_correlativo_ncc set numero = (select numero from par_correlativo where tipo = 'NCC') ,\n" +
                                "hasta = (select hasta from par_correlativo where tipo = 'NCC'),\n" +
                                "desde = (select desde from par_correlativo where tipo = 'NCC'),\n" +
                                "hasta_real = (select hasta_real from par_correlativo where tipo = 'NCC')\n" +
                                "where tipo = 'NCC'");
                    CargaCantidad();
                    txCantidad.setText("0");
                }
                else {
                    JOptionPane.showMessageDialog(null, "No se modificó cantidad.");
                }
            }
            else {
                JOptionPane.showMessageDialog(null, "Operación cancelada.");
            }
        } catch (SQLException ex) {
            Logger.getLogger(pfControlNCC.class.getName()).log(Level.SEVERE, null, ex);
        }
        CargaCantidad();
        
    }//GEN-LAST:event_jButton3ActionPerformed

